# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/notification_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM_NAME="Dorm Booking System"
MAIL_FROM_EMAIL=noreply@dormbooking.com

# WebSocket Configuration
FRONTEND_URL=http://localhost:3000

# Kafka Configuration (if needed)
KAFKA_BROKER=localhost:9092
KAFKA_GROUP_ID=notification-service
KAFKA_CLIENT_ID=notification-service

# RabbitMQ Configuration (if needed)
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_NOTIFICATION_QUEUE=notifications.delivery

# SMS Configuration (if needed)
SMS_PROVIDER=twilio
SMS_API_KEY=your-twilio-key

# Application Configuration
PORT=3001
NODE_ENV=development
