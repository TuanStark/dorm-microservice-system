generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id          String           @id @default(uuid())
  userId      String
  status      BookingStatus    @default(PENDING)
  startDate   DateTime
  endDate     DateTime
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // Relation
  details     BookingDetail[]
  @@map("bookings")
  @@index([userId])
}

model BookingDetail {
  id          String   @id @default(uuid())
  bookingId   String
  roomId      String
  price       Float
  time        Int
  note        String?  // optional: ghi chú hoặc yêu cầu thêm
  createdAt   DateTime @default(now())

  booking     Booking  @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  @@index([bookingId])
  @@map("booking_details")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELED
}



