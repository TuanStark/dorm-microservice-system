generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Building {
  id          String   @id @default(uuid())
  name        String
  address     String
  images      String?
  city        String?
  country     String?
  description String?
  longtitude  String?
  latitude    String?
  imagePublicId String? @map("image_public_id")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // events is optional - used for audit
  roomsCount  Int      @default(0)

  @@map("building")
}